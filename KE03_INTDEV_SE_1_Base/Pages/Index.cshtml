@page
@model Partico.Pages.IndexModel
@{
    ViewData["Title"] = "Welkom bij Partico";
}

@section Scripts {
    <script>
        function addToCart(id, quantity, name, price) {
            window.addToCart(id, quantity, name, price);
        }
    </script>
}

<h1 class="text-center mb-4">Welkom bij Partico</h1>
<p class="text-center">Bestel eenvoudig onderdelen en producten</p>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var product in Model.Products)
    {
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">@product.Description</p>
                    <p class="card-text"><strong>@product.Price.ToString("C")</strong></p>
                    <button class="btn btn-primary w-100"
                            onclick="addToCart(@product.Id, 1, '@product.Name', @product.Price)">
                        Toevoegen
                    </button>
                </div>
            </div>
        </div>
    }
</div>
